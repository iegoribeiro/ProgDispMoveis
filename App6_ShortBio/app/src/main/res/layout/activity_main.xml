<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
        android:layout_width="206dp"
        android:layout_height="189dp"
        app:srcCompat="@drawable/me"
        android:id="@+id/imgMe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txtMyName"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"/>

    <TextView
            android:text="LOREM IPSUM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMyName"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/btnAbout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp"
            android:textAllCaps="false"
            android:typeface="normal"/>

    <Button
        android:text="Sobre"
        android:layout_width="232dp"
        android:layout_height="48dp"
        android:id="@+id/btnAbout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMyName"
        android:layout_marginTop="16dp"
        android:textSize="18sp"/>

    <Button
        android:text="Formação"
        android:layout_width="232dp"
        android:layout_height="48dp"
        android:id="@+id/btnEducation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAbout"
        android:layout_marginTop="4dp"
        android:textSize="18sp"/>

    <Button
        android:text="Experiência"
        android:layout_width="232dp"
        android:layout_height="48dp"
        android:id="@+id/btnExperiences"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEducation"
        android:layout_marginTop="4dp"
        android:textSize="18sp"/>

    <Button
        android:text="Objetivos"
        android:layout_width="232dp"
        android:layout_height="48dp"
        android:id="@+id/btnGoals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnExperiences"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>